<!DOCTYPE html>
<html>
<head>
  <title>Shortr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
	<div class='links'>
		<h1 style="display:inline;"><a href='/' class='no_color_change_link'>Shortr</a></h1>
		<a href='/'>Home</a> | <a href='/'>Create</a> | <a href='/stats/stats'>Statistics</a>
	</div>
	<div class='header_form'>
		<%= form_tag("/index/go", method: "get", :class => 'header_form' ) do %>
			<%= label_tag(:short, "Go to:") %>
			<%= text_field_tag(:short) %>
			<%= submit_tag("Go!") %>
		<% end %>
	</div>
</div>

<%= yield %>

</body>
</html>